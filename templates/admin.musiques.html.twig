{% extends 'base.admin.html.twig' %}
{% block body %}
<div class="adminMusiques">
				<h1 class="wp-heading-inline">Administration du site web marchand</h1>
				<table class="wp-list-table widefat">
					{% for article in articles %}
					{% if loop.first %}
					<thead>
						<tr>
							<th class="column-primary">Produit</th>
							<th>Disponibilit&eacute;</th>
							<th>Image</th>
							<th>Prix</th>
							<th>Date de parution</th>
							<th>&nbsp;</th>
							<th>&nbsp;</th>

						</tr>
					</thead>
					<tbody>
					{% endif %}
						

						<tr id="id_{{ article.id }}">
							<td data-colname="Titre" class="column-primary"><strong>{{ article.artiste }} : {{ article.titre }}</strong><button data-idtogglerow="{{ article.id }}" type="button" class="toggle-row">
								<span class="screen-reader-text">Afficher plus de d√©tails</span></button></td>
							<td data-colname="Disponibilit&eacute;">{{ article.disponibilite }}</td>
							{% if article.image is not null and article.image is not empty %}
							<td class="img" data-colname="Image">
							<img src="{{ article.image }}"/></td>
							{% else %}
							<td>Inexistante</td>
							{% endif %}
							<td data-colname="Prix" class="product-price">{{ article.prix }}</td>
							<td data-colname="Date de parution" class="date-parution">{{ article.datedeparution|date("Y")  }}</td>
							<td><button onclick="window.location.href='/admin/musiques/modifier?id={{ article.id }}'">Modifier</button></td>
							<td><button data-iddelete="{{ article.id }}">Supprimer</button></td>
						</tr>
						
					{% if loop.last %}
					</tbody>
					
					{% endif %}
					{% endfor %}
				</table>
				<table class="wp-list-table">
					<tr>
						<td><a href="/admin/musiques/ajouter">Ajouter un nouvel album musical</a></td>
					</tr>
				</table>
				</div>				
{% endblock %}
