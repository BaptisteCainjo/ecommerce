{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<form class="login100-form validate-form" method="post" class="formulaireLogin">
					<span class="login100-form-title p-b-26">
						S'inscrire
					</span>

					{{ form_start(registrationForm, {'attr': {'class': 'formulaireRegister'}}) }}
					{{ form_row(registrationForm.firstName, {
            label: 'Prenom',
									'row_attr': {
							'class': 'wrap-input100 validate-input'
						},
			    attr: {
        class: 'form-control input100',
        placeholder: 'Votre prénom'
    }
        }) }}
					{{ form_row(registrationForm.lastName, {
            label: 'Nom',						'row_attr': {
							'class': 'wrap-input100 validate-input'
						},
						    attr: {
        class: 'form-control input100',
        placeholder: 'Votre nom'
    }
        }) }}
					{{ form_row(registrationForm.username, {
            label: 'Pseudo',						'row_attr': {
							'class': 'wrap-input100 validate-input'
						},
						    attr: {
        class: 'form-control input100',
        placeholder: 'Votre pseudo'
    }
        }) }}
					{{ form_row(registrationForm.email, {
            label: 'Email',						'row_attr': {
							'class': 'wrap-input100 validate-input'
						},
			    attr: {
        class: 'form-control input100',
        placeholder: 'Votre Email'
    }
        }) }}
					{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe',						'row_attr': {
							'class': 'wrap-input100 validate-input'
						},
						    attr: {
        class: 'form-control input100',
        placeholder: 'Votre mot de passe'
    }
        }) }}

					<em>
						<p>6 caractères</p>
						<p>1 MAJUSCULE</p>
						<p>1 caractère spécial</p>
					</em>

					<div class="wrap-login100-form-btn">
						<div class="login100-form-bgbtn"></div>
						<button class="login100-form-btn">
							S'inscrire
						</button>
					</div>

					<p></p>
					<div class="text-center p-t-115">
						<p>
							<span class="txt1">
								Vous avez déjà un compte ?
							</span>
							<a class="txt2" style="text-decoration:underlin" href="/login">Se connecter</a>
						</p>
					</div>


					{{ form_end(registrationForm) }}
				</form>
			</div>
		</div>
	</div>
{% endblock %}
